@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  style="margin-left:-30px;" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fas fa-user-circle fa-lg" style="color:whitesmoke;"></i> Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item" style="margin-right:-100px;" >
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-light text-primary "><i class="fas fa-sign-out-alt fa-1x"></i>Logout</button>
        </form>
    </li>
}   
else
{
    <li class="nav-item" >
        <a  class="nav-link text-primary font-weight-bold btn btn-light" asp-area="Identity" asp-page="/Account/Register">Register <i class="fas fa-user-plus"></i></a>

    </li>
    <li style="padding-left:15px" class="nav-item" >
        <a class="nav-link text-primary font-weight-bold btn btn-light" asp-area="Identity" asp-page="/Account/Login">Login <i class="fas fa-sign-in-alt"></i></a>
    </li>
}
</ul>
